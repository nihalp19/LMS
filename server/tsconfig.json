{
  "compilerOptions": {
    "module": "ESNext",           // Use ES modules
    "target": "ESNext",           // Use the latest ECMAScript features
    "moduleResolution": "node",   // Use Node.js module resolution strategy
    "esModuleInterop": true,      // Enable compatibility with CommonJS
    "strict": true,               // Enable strict type-checking
    "skipLibCheck": true,         // Skip type checking for declaration files
    "resolveJsonModule": true,    // Allow importing JSON files as modules (optional)
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing for file imports
    "outDir": "./dist",           // Output compiled JS to the dist folder (optional)
    "baseUrl": ".",               // Set base URL for easier imports
    "paths": {                    // Optional paths configuration
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "server.ts",                  // Include the entry TypeScript file
    "register.ts",                // Include the register file
    "src/**/*.ts"                 // Include all TypeScript files in the src directory (if using a src folder)
  ],
  "exclude": [
    "node_modules"                // Exclude node_modules for faster compilation
  ]
}
